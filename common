THISDIR="$(dirname "$(readlink -f "$0")")"

# Paths
export BORG_OUT='/tmp/borg.latest'
export EXTRACT="${THISDIR}/borg-extract"
export BORG="borg"

# Colors
export RESET_TEXT="\e[0m"
export HEADER_COLOR="\e[48;5;237m"
export BORTD="\e[1m"

say_color() {
  echo -e "${1}${2}${RESET_TEXT}"
}

header() {
  echo -e "${1}" #| tr -s "${HEADER_COLOR}[ ]"
}

reset_color() {
  echo -ne "${RESET_TEXT}"
}
